{
  "name": "liqpro-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "docker-compose -f deploy/docker/docker-compose.dev.yml up",
    "dev:build": "docker-compose -f deploy/docker/docker-compose.dev.yml up --build",
    "build": "npm run build:libs && npm run build:services",
    "build:libs": "npm run build --workspace=@liqpro/common && npm run build --workspace=@liqpro/database && npm run build --workspace=@liqpro/monitoring && npm run build --workspace=@liqpro/security",
    "build:services": "npm run build --workspace=@liqpro/agent-engine && npm run build --workspace=@liqpro/scoring-service && npm run build --workspace=@liqpro/signal-service && npm run build --workspace=@liqpro/data-service",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "npm run format --workspaces --if-present",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "test": "npm run test --workspaces --if-present",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.0.0",
    "typescript": "5.1.6"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.{json,md}": "prettier --write"
  }
}
