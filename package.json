{
  "name": "liqpro",
  "version": "1.0.0",
  "description": "AI-driven investment platform for Meteora DLMM liquidity pools on Solana",
  "private": true,
  "workspaces": [
    "libs/*",
    "services/*"
  ],
  "scripts": {
    "start:dev": "docker-compose up",
    "start:dev:build": "docker-compose up --build",
    "stop:dev": "docker-compose down",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "start": "cd production && ./scripts/start.sh",
    "stop": "cd production && ./scripts/stop.sh",
    "monitor": "cd production && ./scripts/monitor.sh",
    "backup": "cd production && ./scripts/backup.sh",
    "cleanup": "scripts/maintenance/final-cleanup.sh"
  },
  "keywords": [
    "solana",
    "meteora",
    "dlmm",
    "liquidity",
    "defi",
    "ai",
    "investment"
  ],
  "author": "LiqPro Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "typescript": "^5.0.4"
  }
}
