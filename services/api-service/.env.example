# API Service Environment Variables Example
# Copy this file to .env and modify as needed

# Server Configuration
PORT=3000
NODE_ENV=development

# Service URLs
SIGNAL_SERVICE_URL=http://localhost:3001
DATA_SERVICE_URL=http://localhost:3002
SCORING_SERVICE_URL=http://localhost:3003
AGENT_SERVICE_URL=http://localhost:3004

# Service API Keys
SIGNAL_SERVICE_API_KEY=signal-service-key
DATA_SERVICE_API_KEY=data-service-key
SCORING_SERVICE_API_KEY=scoring-service-key
AGENT_SERVICE_API_KEY=agent-service-key

# Service Timeout
SERVICE_TIMEOUT=10000  # 10 seconds in milliseconds

# Security
API_KEYS=test-api-key,another-api-key
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100

# Caching
CACHE_DEFAULT_TTL=300  # 5 minutes in seconds

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false  # Set to true to enable Redis caching

# Logging
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE_PATH=logs/api-service.log

# Debug Mode
DEBUG=true 