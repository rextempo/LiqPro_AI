# 服务配置
PORT=3000
HOST=localhost
VERSION=1.0.0
NODE_ENV=development

# 信号生成配置
SIGNAL_GENERATION_INTERVAL=300000
STRATEGY_UPDATE_INTERVAL=3600000
SIGNAL_EXPIRATION_TIME=86400000

# API配置
DATA_SERVICE_URL=http://localhost:3001
METEORA_SERVICE_URL=http://localhost:3002
JUPITER_SERVICE_URL=http://localhost:3003

# 日志配置
LOG_LEVEL=info

# 安全配置
API_KEYS=key1,key2,key3

# Cache Configuration
CACHE_ENABLED=true
CACHE_EXPIRY=300000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=10
REDIS_CONNECT_TIMEOUT=5000

# HTTP Client Configuration
MAX_RETRIES=3
TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Authentication
AUTH_ENABLED=true
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=60000

# Alerts
ALERTS_ENABLED=true
ALERTS_CHANNELS=["email", "slack"]

# Risk Thresholds
VOLATILITY_RISK_THRESHOLD=0.7
LIQUIDITY_RISK_THRESHOLD=0.6
IMPERMANENT_LOSS_RISK_THRESHOLD=0.5
SYSTEMIC_RISK_THRESHOLD=0.8 