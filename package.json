{
  "name": "liqpro-frontend",
  "version": "0.1.0",
  "private": true,
  "description": "LiqPro - AI-driven investment platform for Meteora DLMM liquidity pools on Solana",
  "versionInfo": {
    "integrationTests": "v1.0.0-dlmm-test",
    "lastUpdated": "2025-03-11"
  },
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "docker-compose -f deploy/docker/docker-compose.dev.yml up",
    "dev:build": "docker-compose -f deploy/docker/docker-compose.dev.yml up --build",
    "build": "react-scripts build",
    "build:libs": "npm run build --workspace=@liqpro/common && npm run build --workspace=@liqpro/database && npm run build --workspace=@liqpro/monitoring && npm run build --workspace=@liqpro/security",
    "build:services": "npm run build --workspace=@liqpro/agent-engine && npm run build --workspace=@liqpro/scoring-service && npm run build --workspace=@liqpro/signal-service",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "npm run format --workspaces --if-present",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "test": "react-scripts test",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:jest": "jest --coverage --config=jest.config.js",
    "prepare": "husky install",
    "integration:test": "cd tests/integration && node dlmm_test.js",
    "integration:mock": "cd tests/integration && ./run_with_mock.sh",
    "integration:real": "cd tests/integration && ./run_dlmm_test_against_real.sh",
    "integration:metrics": "cd tests/integration && node collect_metrics.js",
    "integration:report": "cd tests/integration && node collect_metrics.js report",
    "update-version": "node scripts/update-version.js",
    "start": "react-scripts start",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/axios": "0.9.36",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.11",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "@types/react-router-dom": "5.3.3",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "autoprefixer": "^10.4.13",
    "axios": "^1.3.2",
    "date-fns": "4.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "postcss": "^8.4.21",
    "prettier": "3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.0",
    "typescript": "5.1.6",
    "web-vitals": "^2.1.4"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.{json,md}": "prettier --write"
  },
  "dependencies": {
    "@solana/web3.js": "^1.73.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
