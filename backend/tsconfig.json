{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@liqpro/shared/*": ["../shared/src/*"],
      "@config/*": ["../config/*"]
    }
  },
  "include": ["src/**/*", "../config/*.js"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 